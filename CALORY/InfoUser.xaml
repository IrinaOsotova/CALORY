<Window x:Class="CALORY.InfoUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CALORY"
        mc:Ignorable="d"
        Title="InfoUser" Height="450" Width="800">
    <Grid>
        <Button x:Name="NextButton" Content="Next" HorizontalAlignment="Left" Margin="470,274,0,0" VerticalAlignment="Top" RenderTransformOrigin="6.231,1.028" Click="NextButton_Click"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="94,274,0,0" VerticalAlignment="Top" RenderTransformOrigin="6.231,1.028" Width="66" Click="BackButton_Click"/>
        <TextBox x:Name="tb1" MaxLength="3" HorizontalAlignment="Left" Margin="292,187,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" PreviewTextInput="tb1_PreviewTextInput"/>
        <TextBox x:Name="tb2" MaxLength="3" HorizontalAlignment="Left" Margin="292,352,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" PreviewTextInput="tb2_PreviewTextInput"/>
        <Label x:Name="label1" Content="Name:" HorizontalAlignment="Left" Margin="292,141,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Name:" HorizontalAlignment="Left" Margin="292,321,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="GenderDateGrid">
            <Button x:Name="buttonMan" Content="М" HorizontalAlignment="Left" Margin="268,237,0,0" VerticalAlignment="Top" Height="63" Width="68" Click="buttonMan_Click"/>
            <Button x:Name="buttonWoman" Content="Ж" HorizontalAlignment="Center" Margin="0,237,0,0" VerticalAlignment="Top" Height="63" Width="68" Click="buttonWoman_Click" />
            <DatePicker x:Name="DateUser" HorizontalAlignment="Left" Margin="302,381,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid x:Name="AvtivityGrid">
            <Button x:Name="Activity1" Content="Activity1" HorizontalAlignment="Left" Margin="516,78,0,0" VerticalAlignment="Top" Height="63" Width="147" Click="Activity1_Click"/>
            <Button x:Name="Activity2" Content="Activity2" HorizontalAlignment="Left" Margin="516,154,0,0" VerticalAlignment="Top" Height="63" Width="147" Click="Activity2_Click"/>
            <Button x:Name="Activity3" Content="Activity3" HorizontalAlignment="Left" Margin="516,235,0,0" VerticalAlignment="Top" Height="63" Width="147" Click="Activity3_Click"/>
            <Button x:Name="Activity4" Content="Activity4" HorizontalAlignment="Left" Margin="516,318,0,0" VerticalAlignment="Top" Height="63" Width="147" Click="Activity4_Click"/>
        </Grid>
        <Grid x:Name="PurposeGrid">
            <Button x:Name="Purpose1" Content="Purpose1" HorizontalAlignment="Left" Margin="694,130,0,0" VerticalAlignment="Top" Height="38" Width="72" Click="Purpose1_Click"/>
            <Button x:Name="Purpose2" Content="Purpose2" HorizontalAlignment="Left" Margin="694,179,0,0" VerticalAlignment="Top" Height="38" Width="72" Click="Purpose2_Click"/>
            <Button x:Name="Purpose3" Content="Purpose3" HorizontalAlignment="Left" Margin="694,232,0,0" VerticalAlignment="Top" Height="38" Width="72" Click="Purpose3_Click"/>

        </Grid>



    </Grid>

</Window>
